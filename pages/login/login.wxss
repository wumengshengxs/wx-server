.container{
    display: flex;
    flex-direction:column;
    align-items: center;
    background-color:#e5e5e5;
    padding-left: 40rpx;
    padding-right:  40rpx;
}

page{
    background-color: #e5e5e5;
}

.top-text{
  margin-top: 50rpx;
  border-radius: 18rpx;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.middle-text{
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color:#760001;
}

.server-text{
  width: 75%;
  font-size: 60rpx;
  color: #ffd800;
  line-height: 70rpx;
  font-weight: 900;
}


.section{
  background-color: white;
  border: 1px solid #666464;
