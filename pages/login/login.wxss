  margin-top: 30rpx; 
  border-radius: 10rpx;
  padding: 10px 6px 30px 6px;
}
.input-bottom{
  border-bottom: 2rpx solid #000000; 
  padding-bottom: 26rpx;
  margin-bottom: 40rpx; 
  height: 55rpx;
  line-height:70rpx;
  padding-top: 0px; 
}

.input-rigin{
  width:80%;
  height: 69rpx;
  display: flex;
  align-items: center;
  float: right;
}

.rigin-botton{
  width: 50%;
  font-size: 14px;
  height:62rpx;
  line-height: 60rpx;
  padding-left: 6rpx; 
